{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": [
      "DOM",
    ],
    "jsx": "react-jsx",
    "noEmit": true,
    "isolatedModules": true ,
    "esModuleInterop": true ,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": {
      "hoc": ["src/hoc/*"],
      "components": ["src/components/*"],
      "assets": ["src/assets/*"],
      "api": ["src/api/*"],
      "enum": ["src/enum/*"],
      "store": ["src/store/*"],
      "context": ["src/context/*"],
      "hock": ["src/hock/*"],
    }
  },
  "include": ["src/**/*"]
}